{
	"$schema": "https://raw.githubusercontent.com/retraceur/ressources/refs/heads/main/schemas/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#1e1e1e",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#0c0c0c",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#ffffff",
					"name": "Tertiary"
				},
				{
					"slug": "retraceur-blue",
					"color": "#273c86",
					"name": "Retraceur blue"
				},
				{
					"slug": "retraceur-blue-hover",
					"color": "#4563c9",
					"name": "Retraceur blue hover"
				},
				{
					"slug": "very-dark-grey",
					"color": "#444444",
					"name": "Very dark grey"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Regular.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Italic.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Bold.ttf"
							]
						},
						{
							"fontFamily": "Noto Serif",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-BoldItalic.ttf"
							]
						}
					],
					"fontFamily": "\"Noto Serif\",sans-serif",
					"name": "Noto Serif",
					"slug": "noto-serif"
				}
			],
			"fontSizes": [
				{
					"slug": "ultra-small",
					"size": "0.857142857rem",
					"name": "Ultra Small"
				},
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.5rem",
					"name": "Large"
				},
				{
					"slug": "very-large",
					"size": "2rem",
					"name": "Very Large"
				},
				{
					"slug": "ultra-large",
					"size": "2.25rem",
					"name": "Ultra Large"
				}
			],
			"lineHeight": true
		},
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--tertiary)",
			"text": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--noto-serif)",
			"lineHeight": "1.5"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--ultra-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--very-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--retraceur-blue)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--retraceur-blue-hover)"
					}
				}
			},
			"button": {
				"typography": {
					"fontWeight": "700",
					"fontSize": "1.2rem"
				},
				"color": {
					"background": "var(--wp--preset--color--retraceur-blue)",
					"text": "#ffffff"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--retraceur-blue-hover)",
						"text": "#ffffff"
					}
				},
				"border": {
					"radius": "0",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--retraceur-blue)"
				},
				"shadow": "0 1px 2px rgba(64, 64, 64, 0.1)"
			}
		},
		"blocks": {
			"core/gallery": {
				"spacing": {
					"padding": {
						"top": "1em",
						"bottom": "1em"
					}
				}
			},
			"core/image": {
				"spacing": {
					"padding": {
						"top": "1em",
						"bottom": "1em"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
